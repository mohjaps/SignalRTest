
@{
    ViewData["Title"] = "Index";
}

<h1>Announcements</h1>
<form method="post" asp-controller="Announcement" asp-action="Post">
    <div class="form-group">
        <label for="sender" class="form-label">Sender Name</label>
        <input name="sender" class="form-control" id="sender"/>
    </div>
    <div class="form-group mt-4">
        <label for="message" class="form-label">Message: </label>
        <textarea name="message" class="form-control" rows="10" cols="50" id="message"></textarea>
    </div>
    <input type="submit" value="Send" class="btn btn-primary mt-4"/>
</form>

